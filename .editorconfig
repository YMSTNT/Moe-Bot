[*.cs]
# Disable "Mark local variable as const."
dotnet_diagnostic.rcs1118.severity = none
# Disable "Use explicit type instead of 'var'."
dotnet_diagnostic.IDE0008.severity = none
# Enable "Using directive is unnecessary."
dotnet_diagnostic.IDE0005.severity = suggestion
# Disable "Parameter can be removed; its initial value is never used."
dotnet_diagnostic.IDE0060.severity = none
# Disable "Member does not access instance data and can be marked as static."
dotnet_diagnostic.CA1822.severity = none

indent_style = space
indent_size = 2
